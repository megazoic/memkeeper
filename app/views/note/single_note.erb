<div class="home">
      <p><%= @note.content %> | <%= @note.ts.localtime %> | <%= @tag.name%><p><br>

      <form method="POST"
            action="/notes/<%= @note.id %>/delete">
            <input id="hidden" type="hidden" name="_method" value="DELETE">
            <input type="submit" value="Delete Note">
      </form>

      <button class="btn btn-small"><a href="/notes/<%= @note.id %>/edit">Edit Note</a></button>
</div>